@model MonAnModel
@{
    ViewData["Title"] = "cập nhật món ăn";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 col-12 mx-auto">
            <div class="card mt-5">
                <div class="card-header">
                    <h3>Cập nhật món ăn</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="MonAn" method="post" enctype="multipart/form-data">
     
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MaMonAn"/>
                        <div class="form-group">
                            <label class="form-label">Tên Món ăn</label>
                            <input asp-for="TenMonAn" class="form-control" />
                            <span asp-validation-for="TenMonAn" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Gía</label>
                            <input asp-for="DonGia" class="form-control" />
                            <span asp-validation-for="DonGia" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Mô tả</label>
                            <textarea asp-for="MoTa" class="form-control"></textarea>
                            <span asp-validation-for="MoTa" class="text-danger" />
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label">Số lượng</label>
                            <input asp-for="SoLuong" class="form-control" />
                            <span asp-validation-for="SoLuong" class="text-danger" />
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label">Địa chỉ quán</label>
                            <input asp-for="DiaChiQuan" class="form-control" />
                            <span asp-validation-for="DiaChiQuan" class="text-danger" />
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label">Video</label>
                            <input asp-for="Video" class="form-control" />
                            <span asp-validation-for="Video" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Danh mục</label>
                            <select asp-for="MaDanhMuc" class="form-control" asp-items="ViewBag.DanhMucs">
                                <option>--Chọn danh mục</option>

                            </select>
                            <span asp-validation-for="MaDanhMuc" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">hình ảnh</label>
                            <input asp-for="ImageUpload" class="text-danger" />
                            <img src="~/image/monan/@Model.HinhAnh" style="height:100px;" />

                        </div>
                        <div class="form-group">
                            <label class="form-label">Trạng thái</label>
                            <select asp-for="TrangThai" class="form-control">
                                <option>--Chọn hiển thị</option>
                                <option value="1">Hiển thị</option>
                                <option value="0">Không hiển thị</option>

                            </select>
                            <span asp-validation-for="TrangThai" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">Cập nhật</button>

                        </div>
                    </form>
                    <a asp-action="index">Danh sách món ăn</a>

                </div>
                </div>

        </div>

    </div>

</div>



