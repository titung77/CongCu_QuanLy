@model NhanVienModel
@{
    ViewData["title"] = "Thêm mới  Nhân Viên";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 col-12 mx-auto">
            <div class="card mt-5">
                <div class="card-header">
                    <h3>Thêm người truy cập</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ThemNV" asp-controller="Account" method="post">
                        <input type="hidden" asp-for="MaNV" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="form-label">Tên Nhân Viên</label>
                            <input asp-for="TenNV" type="text" class="form-control" />
                            <span asp-validation-for="TenNV" class="text-danger" />
                        </div>
                        

                        <div class="form-group">
                            <label class="form-label">mật khẩu</label>
                            <textarea asp-for="MatKhau" class="form-control"></textarea>
                            <span asp-validation-for="MatKhau" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <textarea asp-for="Email" class="form-control"></textarea>
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Địa chỉ</label>
                            <textarea asp-for="DiaChi" class="form-control"></textarea>
                            <span asp-validation-for="DiaChi" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Điện thoại</label>
                            <textarea asp-for="DienThoai" class="form-control"></textarea>
                            <span asp-validation-for="DienThoai" class="text-danger" />
                        </div>

                       
                        <div class="form-group m-3 text-end">
                            <button type="submit" class="btn btn-primary">Thêm mới</button>

                        </div>
                    </form>
                    <a  class="mt-2" asp-action="index">Danh sách  nhân viên  </a>

                </div>
            </div>

        </div>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

