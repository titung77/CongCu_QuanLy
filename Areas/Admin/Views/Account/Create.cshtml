@model ChiTietChucNang

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 col-12 mx-auto">
            <div class="card mt-5">
                <div class="card-header">
                    <h3>Thêm mới phân quyền chức năng</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Account" method="post" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mt-2">
                            <label class="form-label">Quyền</label>
                            <select asp-for="MaCN" class="form-control" asp-items="ViewBag.PhanQuyens">
                                <option>--Chọn chức năng</option>

                            </select>
                           
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label">Nhân viên</label>
                            <select asp-for="MaNV" class="form-control" asp-items="ViewBag.NhanViens">
                                <option>--chọn nhân viên </option>

                            </select> 

                        </div>
                       
                       

                        <div class="form-group mt-2">
                            <button class="btn btn-primary">Thêm mới</button>

                        </div>
                    </form>
                    <a class="mt-3" asp-action="index">Danh sách  tài khoản truy cập</a>

                </div>
            </div>

        </div>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}