@model ChucNangModel
@{
    ViewData["title"] = "Thêm mới  Danh mục";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 col-12 mx-auto">
            <div class="card mt-5">
                <div class="card-header">
                    <h3>Cập nhật Quyền truy cập</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Quyen" method="post">
                        <input type="hidden" asp-for="MaCN" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="form-label">Tên quyền</label>
                            <input asp-for="TenQuyen" type="text" class="form-control" />
                            <span asp-validation-for="TenQuyen" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Mô tả</label>
                            <textarea asp-for="MoTa" class="form-control"></textarea>
                            <span asp-validation-for="MoTa" class="text-danger" />
                        </div>

                     
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>

                        </div>
                    </form>
                   

                </div>
            </div>

        </div>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

