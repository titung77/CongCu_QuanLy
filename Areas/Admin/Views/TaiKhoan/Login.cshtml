@model WebDatMonAn.Models.ViewModel.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/admin/login/fontloginadmin.css">

    <link rel="stylesheet" href="~/admin/login/adminlogin.owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/admin/login/bootstrapadmin.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/admin/login/login-admin.css">

    <title>Login </title>
</head>
<body>


    <div class="d-md-flex half">
        <div class="bg" style="background-image: url('/admin/login/bg_3.jpg');"></div>
        <div class="contents">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-12">
                        <div class="form-block mx-auto">
                            <div class="text-center mb-5">
                                <h3>Quản lí <strong>FOOD</strong></h3>
                                <!-- <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p> -->
                            </div>
                            <form asp-action="Login" asp-controller="TaiKhoan" method="post">
                                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group first">
                                    <label for="username">Tài khoản</label>
                                    <input asp-for="Email" type="text" class="form-control" placeholder="Nhập email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group last mb-3">
                                    <label for="password">Mật khẩu</label>
                                    <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu">
                                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                                </div>

                                <div class="d-sm-flex mb-5 align-items-center">
                                    <label class="control control--checkbox mb-3 mb-sm-0">
                                        <span class="caption">Nhớ mật khẩu</span>
                                        <input type="checkbox" checked="checked" />
                                        <div class="control__indicator"></div>
                                    </label>
                                   
                                </div>

                                <input type="submit" value="Đăng nhập" class="btn btn-block btn-primary">
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/login/vendor/jquery/jquery.min.js"></script>
    <script src="~/login/js/main.js"></script>
    @await Component.InvokeAsync("Notyf")

    @section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
