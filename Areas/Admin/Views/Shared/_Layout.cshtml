<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--favicon-->
	<!--plugins-->
	<link href="~/admin/plugins/vectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet" />

	<!-- loader-->

	<script src="~/admin/js/pace.min.js"></script>
	<!-- Bootstrap CSS -->
	<link href="~/admin/css/bootstrap.min.css" rel="stylesheet">

	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
	<link href="~/admin/css/app.css" rel="stylesheet">
	

	<title>Trang quản trị</title>
</head>

<body>
	<!--wrapper-->
	<div class="wrapper">
		<!--start header wrapper-->
		<div class="header-wrapper">
			<!--start header -->
			<header>
				<div class="topbar d-flex align-items-center">
					<nav class="navbar navbar-expand">
						<div class="topbar-logo-header">
							<div class="">
								<img src="~/client/img/Food-Plate.png" class="logo-icon" alt="logo icon">
							</div>
							<div class="">
								<h4 class="logo-text">Trang quản trị</h4>
							</div>
						</div>
						<div class="mobile-toggle-menu"><i class='bx bx-menu'></i></div>

						<div class="top-menu ms-auto">
							<ul class="navbar-nav align-items-center">
								<li class="nav-item mobile-search-icon">
									<a class="nav-link" href="#">
										<i class='bx bx-search'></i>
									</a>
								</li>


							</ul>
						</div>
						<div class="user-box dropdown">
							<a class="d-flex align-items-center nav-link dropdown-toggle dropdown-toggle-nocaret" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="~/admin/images/avatars/avatar-2.png" class="user-img" alt="user avatar">
								<div class="user-info ps-3">
									<p class="user-name mb-0">Pauline Seitz</p>
									<p class="designattion mb-0">Web Designer</p>
								</div>
							</a>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<a class="dropdown-item" asp-action="DangXuat" asp-controller="TaiKhoan"><i class="bx bx-user"></i><span>Đăng xuất</span></a>
								</li>


							</ul>
						</div>
					</nav>
				</div>
			</header>
			<!--end header -->
			<!--navigation-->
			<div class="nav-container primary-menu">

				<nav class="navbar navbar-expand-xl w-100">
					<ul class="navbar-nav justify-content-start flex-grow-1 gap-1">
						<li class="nav-item dropdown">
							<a asp-action="Index" asp-controller="DanhMuc" class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-bs-toggle="dropdown">
								<div class="parent-icon">
									<i class='bx bx-home-circle'></i>
								</div>
								<div class="menu-title">Quản lý danh mục</div>
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" asp-action="Index" asp-controller="DanhMuc"><i class="bx bx-right-arrow-alt"></i>Danh sách  Danh mục</a>
									<a class="dropdown-item" asp-action="Create" asp-controller="DanhMuc"><i class="bx bx-right-arrow-alt"></i>Thêm mới Danh mục</a>
								</li>
								
							</ul>
						</li>
						<li class="nav-item dropdown">
							<a asp-action="Index" asp-controller="MonAn" class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-bs-toggle="dropdown">
								<div class="parent-icon">
									<i class='bx bx-cart'></i>
								</div>
								<div class="menu-title">Quản lý món ăn</div>
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" asp-action="Index" asp-controller="MonAn"><i class="bx bx-right-arrow-alt"></i>Danh sách món ăn</a>
								</li>
								<li>
									<a class="dropdown-item" asp-action="Create" asp-controller="MonAn"><i class="bx bx-right-arrow-alt"></i>thêm mới món ăn</a>
								</li>
								
							</ul>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-bs-toggle="dropdown">
								<div class="parent-icon">
									<i class='bx bx-cart'></i>
								</div>
								<div class="menu-title">Quản lý hóa đơn</div>
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" asp-action="Index" asp-controller="HoaDon"><i class="bx bx-right-arrow-alt"></i>Danh sách hóa đơn</a>
								</li>


							</ul>
						</li>
						<li class="nav-item dropdown">
							<a  class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-bs-toggle="dropdown">
								<div class="parent-icon">
									<i class='bx bx-cart'></i>
								</div>
								<div class="menu-title">Quản lý Khách hàng</div>
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" asp-action="Index" asp-controller="KhachHang"><i class="bx bx-right-arrow-alt"></i>Danh sách khách hàng</a>
								</li>
								

							</ul>
						</li>


						<li class="nav-item dropdown">
							<a href="javascript:;" class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-bs-toggle="dropdown">
								<div class="parent-icon">
									<i class="bx bx-category"></i>
								</div>
								<div class="menu-title">Quản lý hệ thống</div>
							</a>
							<ul class="dropdown-menu">
								<li>
									<a asp-action="Index" asp-controller="Quyen" class="dropdown-item" ><i class="bx bx-right-arrow-alt"></i>Quản lý Quyền truy cập</a>
								</li>
								<li>
									<a asp-action="Index" asp-controller="Account" class="dropdown-item"><i class="bx bx-right-arrow-alt"></i>Quản lý người  truy cập</a>
								</li>
								<li>
									<a class="dropdown-item" asp-action="Index" asp-controller="Shipper"><i class="bx bx-right-arrow-alt"></i>Quản lý người giao hàng</a>
								</li>
								<li>
									<a class="dropdown-item" asp-action="Index" asp-controller="DiaDiem"><i class="bx bx-right-arrow-alt"></i>Quản lý tỉnh thành</a>
								</li>
								<li>
									<a class="dropdown-item" asp-action="Index" asp-controller="Shipper"><i class="bx bx-right-arrow-alt"></i>Quản lý người giao hàng</a>
								</li>
								
							</ul>
						</li>

					</ul>
				</nav>
			</div>
			<!--end navigation-->
		</div>
		<!--end header wrapper-->
		<!--start page wrapper -->
		<div class="page-wrapper mb-5">
			@RenderBody()
		</div>
		<!--end page wrapper -->
		<!--start overlay-->
		<div class="overlay toggle-icon"></div>
		<!--end overlay-->
		<!--Start Back To Top Button--> <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
		<!--End Back To Top Button-->
		<footer class="page-footer">
			<p class="mb-0">Copyright © 2021. All right reserved.</p>
		</footer>
	</div>

	<!--end switcher-->
	<!-- Bootstrap JS -->
	<script src="~/admin/js/bootstrap.bundle.min.js"></script>
	<!--plugins-->
	<script src="~/admin/js/jquery.min.js"></script>

	@await Component.InvokeAsync("Notyf")

	@await RenderSectionAsync("Scripts", required: false)

	

</body>

</html>