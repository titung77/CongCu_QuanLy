@model IEnumerable<CTHDModel>

<br />
    <br/>
<br />
    <br/>
    <br/>


<div class="container mt-5">
  
    <div>
        <table class="table table-bordered">
           <thead>
                <tr>
                    <th>ID</th>
                    <th>Hình ảnh</th>
                    <th>Món ăn</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
           </thead>
          <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="text-center">@item.HoaDon.MaHD</td>
                        <td class="text-center"><img src="~/image/monan/@item.MonAn.HinhAnh" alt="@item.MonAn.TenMonAn" style=" height:100px;" /></td>
                        <td class="text-center">@item.MonAn.TenMonAn</td>

                        <td class="text-center">@item.soluongban</td>
                        <td class="text-center">@item.dongiaban.ToString("#,##0")</td>
                        <td class="text-center">@item.tongtien.ToString("#,##0")</td>





                    </tr>
                }
          </tbody>
        </table>
    </div>

   
