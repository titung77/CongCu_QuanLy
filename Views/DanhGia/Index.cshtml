	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- Product main img -->
			<div class="col-md-5 col-md-push-2">
				<div id="product-main-img">
					<div class="product-preview">
						<img src="path/to/image.jpg" alt="Tên món ăn">
					</div>
				</div>
			</div>
			<!-- /Product main img -->
			<!-- Product details -->
			<div class="col-md-5">
				<div class="product-details">
					<h2 class="product-name">Tên món ăn</h2>
					<h3 class="product-name">Địa chỉ quán</h3>
					<h4 class="product-name">
						<a style="color:#0288d1;" href="#">Xem lượt đánh giá trên food</a>
					</h4>
					<div>
						<div class="product-rating">
							<i class="fa fa-star"></i>
