@model WebDatMonAn.Models.ViewModel.DoiMatKhau
<!-- SECTION -->
@Html.Partial("_SiderPartial")
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-7">
				<!-- Change Password Details -->
				<div class="change-password-details">
					<div class="section-title">
						<h3 class="title">Đổi mật khẩu</h3>
					</div>
					<form method="post" asp-action="DoiMatKhau" asp-controller="TaiKhoan">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<!-- Chỉnh sửa đường dẫn action tùy vào controller và action của bạn -->
						<div class="form-group">
							<input class="input" type="password"  asp-for="matkhauhientai" placeholder="mật khẩu cũ"
								   >
							<span asp-validation-for="matkhauhientai" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input class="input" type="password" asp-for="matkhaumoi" placeholder="mật khẩu mới"
								  >
							<span asp-validation-for="matkhaumoi" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input class="input" type="password" 
								   placeholder="mật khẩu hiện tại" asp-for="nhaplaimatkhaumoi" >
							<span asp-validation-for="nhaplaimatkhaumoi" class="text-danger"></span>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary">Thay đổi mật khẩu</button>
						</div>
					</form>
				</div>
				<!-- /Change Password Details -->
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /SECTION -->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
