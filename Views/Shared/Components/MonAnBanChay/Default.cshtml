@model IEnumerable<MonAnModel>

<div class="aside">
	<h3 class="aside-title">Món ăn bán chạy nhất</h3>
	@foreach ( var item in Model)
	{
		<div class="product-widget">
			<div class="product-img">
				<img src="~/image/monan/@item.HinhAnh" alt="@item.TenMonAn">
			</div>
			<div class="product-body">
				<p class="product-category">@item.DanhMuc.TenDanhMuc</p>
				<h3 class="product-name"><a asp-action="Detail" asp-controller="Home" asp-route-Id="@item.MaMonAn">@(item.TenMonAn.Length > 16 ? item.TenMonAn.Substring(0, 16) : item.TenMonAn)...</a></h3>
				<h4 class="product-price">@item.DonGia.ToString("#,###0") đ </h4>
			</div>
		</div>
	}

	
</div>
<!-- /aside Widget -->