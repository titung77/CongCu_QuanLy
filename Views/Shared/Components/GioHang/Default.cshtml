@using WebDatMonAn.Models.ViewModel;
@model GioHangViewModel
<div class="dropdown">
	<a asp-action="GioHang" asp-controller="GioHang" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
		<i class="fa fa-shopping-cart"></i>
		<span>Giỏ hàng</span>
		<div class="qty">@Model.SoLuong</div>
	</a>
	<div class="cart-dropdown">
		<div class="cart-list">

			  @foreach (var item in Model.GioHangs)
                {
			<div class="product-widget">
				<div class="product-img">
					<img src="~/image/monan/@item.HinhAnh" alt="@item.TenMonAn">
				</div>
				<div class="product-body">
					<h3 class="product-name"><a asp-action="Detail" asp-controller="Home" asp-route-Id="@item.MaMonAn">@item.TenMonAn</a></h3>
						<h4 class="product-price"><span class="qty">@item.SoLuong x</span>@item.DonGia.ToString("#,###0") đ</h4>
				</div>
				<button class="delete"><i class="fa fa-close"></i></button>
			</div>
				}
		</div>
		<div class="cart-summary">
			
			<h5>Tổng tiền:@Model.TongTien.ToString("#,###0") đ</h5>
		</div>
		<div class="cart-btns">
			<a asp-action="GioHang" asp-controller="GioHang">xem giỏ hàng</a>
			<a href="#">Checkout  <i class="fa fa-arrow-circle-right"></i></a>
		</div>
	</div>
</div>